{
  "expo": {
    "name": "EsyaHatirla",
    "slug": "esyahatirla",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Konumunuzu takip etmek için izin gerekli"
        }
      ],
      [
        "expo-notifications"
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.esyahatirla",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Konumunuzu takip etmek için gerekli",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Arka planda konum takibi için gerekli",
        "UIBackgroundModes": ["location", "fetch"],
        "UIRequiredDeviceCapabilities": ["location-services"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourcompany.esyahatirla",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
